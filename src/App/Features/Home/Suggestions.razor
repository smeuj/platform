@using Smeuj.Platform.Domain

@code {
    [Parameter]
    public Smeu[] Value { get; set; } = Array.Empty<Smeu>();
}

<div class="flex text-xl mt-6 mb-4 border-b-2 border-dashed pb-1">
    <h2 class="flex-1 font-extrabold leading-none tracking-tight text-gray-900 align-middle">
        Een proefje uit onze collectie:
    </h2>
    <button class="w-4 mr-1" data-hx-get="/suggestions" data-hx-trigger="click" data-hx-target="#smeuj-list" data-hx-swap="innerHTML" title="suggesties verversen">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99"/>
        </svg>
    </button>
</div>
<div id="smeuj-list">
    <SmeujList Smeuj="Value"></SmeujList>
</div>